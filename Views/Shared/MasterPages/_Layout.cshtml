<!DOCTYPE html>
<html lang="en">
    <head>
        <title>
            @ViewBag.Title
        </title>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="description" content="BuildR Template" />
        <meta name="keyword" content="Template, Theme, Responsive, Fluid, Retina" />
        @Html.Partial("~/Views/Shared/Sections/_StyleSheet.cshtml")
        @RenderSection("PageStyle", false)
        @Html.Partial("~/Views/Shared/Sections/_JavaScriptTop.cshtml")
    </head>
    <body>
        <header>
            <nav>
                @Html.Partial("~/Views/Shared/Sections/_Header.cshtml")
                @RenderSection("HeaderBody", false)
                <a href="#" class="down-trigger"><i class="fa fa-5x fa-angle-down"></i></a>
            </nav>
        </header>
        @RenderBody()
        @Html.Partial("~/Views/Shared/Sections/_Footer.cshtml")
        <a href="#" class="scrollup"><i class="fa fa-chevron-up"></i></a>
        @Html.Partial("~/Views/Shared/Sections/_JavaScriptBottom.cshtml")
        @RenderSection("PageJavaScript", false)
    </body>
</html>